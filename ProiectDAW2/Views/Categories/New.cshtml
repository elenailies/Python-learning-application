@model ProiectDAW.Models.Category

@{
    ViewBag.Title = "New";
}

<h2 class="title">Categorie noua</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Categories"))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    @Html.Label("CategoryName", "Adăugați numele categoriei:", new { @class = "label_class" })
    <br />
    @Html.TextBox("CategoryName", null, new { @class = "input_class" })
    @Html.ValidationMessage("CategoryName", null, new { @class = "text-danger" })
    <br /><br />
    <button class="btn button_class" type="submit">Adaugă categoria</button>
}